  "version": "0.0.1",
  "description": "A set of functions to help convert DataTables server-side AJAX calls into ANSI SQL",
  "type": "module",

  "main": "dist/main.js",
  "types": "dist/main.d.ts",

  "scripts": {
    "start:dev": "npx tsc -w --project tsconfig.json",
    "build": "npx shx rm -rf dist && npx tsc --project tsconfig.json",
    "run": "node ./dist/main.js",
    "test": "mocha"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tonyfischetti/dtajax2sql.git"
  },
  "keywords": [
    "DataTables",
    "ajax",
    "sql"
  ],
  "bugs": {
    "url": "https://github.com/tonyfischetti/dtajax2sql/issues"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.8",
    "@types/node": "^22.7.4",
    "mocha": "^10.7.3",
    "shx": "^0.3.4",
    "typescript": "^5.6.2"
  }
}

{
  "name": "dtajax2sql",
  "author": "Tony Fischetti <tony.fischetti@gmail.com>",
  "license": "GPL-3.0-or-later",
  "homepage": "https://github.com/tonyfischetti/dtajax2sql#readme",
  "version": "0.1.4",
  "description": "A set of functions to help convert DataTables server-side AJAX calls into ANSI SQL",
  "type": "module",
  "main": "index.js",
  "types": "index.d.ts",
  "files": [
    "index.js",
    "index.d.ts"
  ],
  "scripts": {
    "start:dev": "npx tsc -w --project tsconfig.json",
    "build": "npx shx rm -f index.js index.d.ts && npx shx rm -rf build && npx shx rm -rf dist && npx tsc --project tsconfig.json",
    "bundle": "rollup -c",
    "test": "mocha",
    "check-exports": "attw --pack . --ignore-rules=cjs-resolves-to-esm"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tonyfischetti/dtajax2sql.git"
  },
  "keywords": [
    "DataTables",
    "ajax",
    "sql"
  ],
  "bugs": {
    "url": "https://github.com/tonyfischetti/dtajax2sql/issues"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.16.4",
    "@types/mocha": "^10.0.8",
    "@types/node": "^22.7.4",
    "@types/sqlstring": "^2.3.2",
    "better-sqlite3": "^11.3.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "helmet": "^8.0.0",
    "mocha": "^10.7.3",
    "rollup": "^4.24.0",
    "rollup-plugin-dts": "^6.1.1",
    "shx": "^0.3.4",
    "typescript": "^5.6.2"
  }
}
